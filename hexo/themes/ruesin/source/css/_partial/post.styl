
/*内容页*/
.content {
    max-width: 980px;
    margin: 0 auto;
    -webkit-box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
    -moz-box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
    -o-box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
    border-radius: 6px;
    background-color: #ffffff;
    padding-top: 10px;
    padding-bottom: 10px;
}
.article {
    padding: 45px;
    word-wrap: break-word;
    font-family: "Open Sans", "Clear Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
    color: rgb(51, 51, 51);
    line-height: 1.6;
}

#write {
    font-size: 16px;
    color: rgb(51, 51, 51);
    line-height: 1.6;
    overflow-x: auto;
}

#write > *:first-child {
    margin-top: 0 !important;
}

#write h1, #write h2, #write h3, #write h4, #write h5, #write h6 {
    margin-top: 24px;
    margin-bottom: 16px;
    font-weight: 600;
    line-height: 1.25
}

#write h1 tt, #write h1 code, #write h2 tt, #write h2 code, #write h3 tt, #write h3 code, #write h4 tt, #write h4 code, #write h5 tt, #write h5 code, #write h6 tt, #write h6 code {
    font-size: inherit
}

#write h1 {
    padding-bottom: 0.3em;
    font-size: 2em;
    border-bottom: 1px solid #eee;
}

#write h2 {
    padding-bottom: 0.3em;
    font-size: 1.5em;
    border-bottom: 1px solid #eee;
}

#write h3 {
    font-size: 1.25em;
}

#write h4 {
    font-size: 1em
}

#write h5 {
    font-size: 0.875em
}

#write h6 {
    font-size: 0.85em;
    color: #777
}

#write ul, #write ol {
    padding-left: 2em
}

#write ul.no-list, #write ol.no-list {
    padding: 0;
    list-style-type: none
}

#write ul ul, #write ul ol, #write ol ol, #write ol ul {
    margin-top: 0;
    margin-bottom: 0
}

#write li > p {
    margin-top: 16px
}

#write li + li {
    margin-top: 0.25em
}

#write dl {
    padding: 0
}

#write dl dt {
    padding: 0;
    margin-top: 16px;
    font-size: 1em;
    font-style: italic;
    font-weight: bold
}

#write dl dd {
    padding: 0 16px;
    margin-bottom: 16px
}

table {
    border-spacing: 0;
    border-collapse: collapse;
}

#write table {
    display: block;
    width: 100%;
    overflow: auto;
    padding: 0;
    word-break: initial;
}

#write table tr {
    background-color: #fff;
    border-top: 1px solid #ccc;
    background-color: white;
    margin: 0;
    padding: 0;
}

#write table th, #write table td {
    margin: 0;
    text-align: left;
    padding: 6px 13px;
}

#write table th {
    border: 1px solid #ddd;
    font-weight: bold;
    font-weight: bold;
}

#write table td {
    border: 1px solid #cccccc;
}

#write table tr:nth-child(2n) {
    background-color: #f8f8f8
}

#write table tr th:first-child,
#write table tr td:first-child {
    margin-top: 0;
}

#write table tr th:last-child,
#write table tr td:last-child {
    margin-bottom: 0;
}

#write img {
    max-width: 100%;
    box-sizing: content-box;
    background-color: #fff
}

#write img[align=right] {
    padding-left: 20px
}

#write img[align=left] {
    padding-right: 20px
}

blockquote {
    margin: 0;
}

#write blockquote {
    padding: 0 1em;
    color: #777;
    border-left: 0.25em solid #ddd;
}

#write blockquote > :first-child {
    margin-top: 0
}

#write blockquote > :last-child {
    margin-bottom: 0
}

#write p, #write blockquote, #write ul, #write ol, #write dl, #write table, #write pre {
    margin-top: 0;
    margin-bottom: 16px
}

#write a {
    color: #4183C4;
}

#write hr {
    height: 0.25em;
    padding: 0;
    margin: 24px 0;
    background-color: #e7e7e7;
    border: 0
}

blockquote blockquote {
    padding-right: 0;
}

#write code, #write tt {
    padding: 0;
    padding-top: 0.2em;
    padding-bottom: 0.2em;
    margin: 0;
    font-size: 85%;
    background-color: rgba(0, 0, 0, 0.04);
    border-radius: 3px
}

#write code::before, #write code::after, #write tt::before, #write tt::after {
    letter-spacing: -0.2em;
    content: "\00a0"
}

#write code br, #write tt br {
    display: none
}

#write del code {
    text-decoration: inherit
}

#write pre {
    word-wrap: normal
}

#write pre > code {
    padding: 0;
    margin: 0;
    font-size: 100%;
    word-break: normal;
    white-space: pre;
    background: transparent;
    border: 0
}

#write pre {
    padding: 16px;
    overflow: auto;
    font-size: 85%;
    line-height: 1.45;
    background-color: #f7f7f7;
    border-radius: 3px
}

#write pre code, #write pre tt {
    display: inline;
    max-width: auto;
    padding: 0;
    margin: 0;
    overflow: visible;
    line-height: inherit;
    word-wrap: normal;
    background-color: transparent;
    border: 0
}

#write pre code::before, #write pre code::after, #write pre tt::before, #write pre tt::after {
    content: normal
}
